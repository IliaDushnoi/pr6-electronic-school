<Window x:Class="Electronic_School.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_School"
        mc:Ignorable="d"
        Title="Администратор" Background="#fff8d6" Height="600" MinHeight="600" MaxHeight="600" Width="500" MinWidth="500" MaxWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Background="#ffffff" Grid.Row="0">
            <Button Name="btnAddPerson" Click="btnAddPerson_Click" Content="Добавить сотрудника" Background="#ffffff" Foreground="#00398f" Margin="2,0,0,0" BorderThickness="0"/>
            <Button Name="btnAddClassroom" Click="btnAddClassroom_Click" Content="Добавить класс" Background="#ffffff" Foreground="#00398f" Margin="2,0,0,0" BorderThickness="0"/>
            <Button Name="btnAdminWindowClose" Click="btnAdminWindowClose_Click" Content="Выход" Background="#ffffff" Foreground="#630000" Margin="2,0,0,0" BorderThickness="0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Row="1">
            <DataGrid Name="dgUsers" Height="430" AutoGenerateColumns="False" Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="200" Header="ФИО" Binding="{Binding FIO}"/>
                    <DataGridTextColumn Width="290" Header="Должность" Binding="{Binding Special}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                <Button Content="Сменить пароль" Width="130" Height="30" Margin="0,0,20,0" Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
                <Button Content="Изменить данные" Width="140" Height="30"  Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Уволить сотрудника" Width="290" Height="30"  Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
            </StackPanel>
        </StackPanel>
        
    </Grid>
</Window>
