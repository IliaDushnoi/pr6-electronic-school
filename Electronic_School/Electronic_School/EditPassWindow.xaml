<Window x:Class="Electronic_School.EditPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_School"
        mc:Ignorable="d"
        Title="Изменить пароль" Height="300" Width="600" Background="#fff8d6" MinHeight="300" MaxHeight="300" MinWidth="600" MaxWidth="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,60,0,0">
                <Label Content="Пароль:" Foreground="#00398f" FontSize="20"/>
                <TextBox  Width="200" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,120,0">
                <Label Content="Подтвердить пароль:" Foreground="#00398f" FontSize="20"/>
                <TextBox Width="200" Height="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Name="btnSavePassword" Click="btnSavePassword_Click" Content="Сохранить" Width="130" Height="30" Margin="0,0,20,0" Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
                <Button Name="btnCloseEditPasswordWindow" Click="btnCloseEditPasswordWindow_Click" Content="Отменить" Width="130" Height="30" Margin="0,0,20,0" Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
