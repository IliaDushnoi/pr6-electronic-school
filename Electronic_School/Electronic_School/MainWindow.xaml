<Window x:Class="Electronic_School.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Electronic_School"
        mc:Ignorable="d"
        Title="Салон массажа" Height="450" Width="600" MinHeight="450" MaxHeight="450" MinWidth="600" MaxWidth="600" Background="#fff8d6">
    <Grid >
        <StackPanel Orientation="Vertical" >
            <TextBlock Text="Салон массажа" TextAlignment="Center" FontSize="50"  Foreground="#00398f" FontWeight="Bold" Margin="0,65,0,0"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Логин:" Foreground="#00398f" FontSize="20" Margin="100,30,0,0"/>
                <TextBox Name="tbLogin" FontSize="20" Foreground="#00398f" Width="290" Height="30" Margin="10,35,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Пароль:" Foreground="#00398f" FontSize="20" Margin="89,30,0,0"/>
                <TextBox Name="tbPassword" FontSize="20" Foreground="#00398f" Width="290" Height="30" Margin="10,35,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="btnLogin" Click="btnLogin_Click" Content="Вход" Width="130" Height="30" Margin="55,35,15,0" Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
                <Button Name="btnCloseoginWindow" Click="btnCloseoginWindow_Click" Content="Выход" Width="130" Height="30" Margin="15,35,0,0" Foreground="#00398f" FontSize="15" FontWeight="DemiBold" Background="#ffffff"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
