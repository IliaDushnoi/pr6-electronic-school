<Window x:Class="School_Journal.AddStudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_Journal"
        mc:Ignorable="d"
        Title="AddStudentDialog" Height="490" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Добавить нового ученика" FontSize="36" HorizontalAlignment="Center" Margin="5"/>
            <Label Content="ФИО ученика:" FontSize="24" Margin="5"/>
            <TextBox x:Name="tbStudentName" FontSize="24" Margin="5"/>
            <Label Content="Оценка студента:" FontSize="24" Margin="5"/>
            <TextBox x:Name="tbBall" FontSize="24" Margin="5"/>
            <Label Content="Возраст студента:" FontSize="24" Margin="5"/>
            <TextBox x:Name="tbAge" FontSize="24" Margin="5"/>
            <Button Name="AddButton" Content="Добавить" Height="30" Margin="5" Click="AddButton_Click"/>
            <Button Name="CloseButton" Content="Отмена" Height="30" Margin="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
