<Window x:Class="School_Journal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_Journal"
        mc:Ignorable="d"
        Title="Login" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <Label Content="Логин:"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,10"/>
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="pbPassword" Margin="0,0,0,10"/>
            <Button Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
