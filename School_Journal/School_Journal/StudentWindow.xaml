<Window x:Class="School_Journal.StudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School_Journal"
        mc:Ignorable="d"
        Title="Журнал учеников" Height="450" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Name="AddStudent" Content="добавить" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top" Click="AddStudent_Click"/>
            <Button Content="показать всех" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top"/>
            <Button Content="показать двойшников" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Top"/>
        </StackPanel>
        <ListView x:Name="lvStudentsListView" Margin="5,41,5,5"/>
            
    </Grid>
</Window>
